# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_RESEARCH_MODEL=gpt-4o
OPENAI_REQUESTS_PER_MINUTE=3  # 3 for free tier, 500+ for paid

# Paper Retrieval
UNPAYWALL_EMAIL=your.email@example.com

# PubMed (optional - higher rate limits with API key)
NCBI_API_KEY=

# Elsevier/Embase (optional - requires institutional subscription)
ELSEVIER_API_KEY=

# SerpAPI (optional - alternative to scholarly for Google Scholar)
SERPAPI_KEY=

# Rate Limiting
PUBMED_REQUESTS_PER_SECOND=3.0  # 10 with API key
SCHOLARLY_MIN_DELAY=5.0  # Seconds between Google Scholar requests
SCHOLARLY_MAX_DELAY=15.0  # Random delay for anti-blocking

# Search Defaults
DEFAULT_MAX_RESULTS_PER_QUERY=500
DEFAULT_QUERIES_PER_DATABASE=3

# Database Configuration
# For local development (host machine)
DATABASE_URL=postgresql+asyncpg://arakis:arakis_dev_password@127.0.0.1:5433/arakis
# For Docker (inside containers)
# DATABASE_URL=postgresql+asyncpg://arakis:arakis_dev_password@postgres:5432/arakis
POSTGRES_PASSWORD=arakis_dev_password  # For docker-compose

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Object Storage (S3/MinIO/R2)
# Leave empty for production - set in deployment environment
# For local development with MinIO, uncomment:
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=arakis-pdfs
S3_REGION=auto

# MinIO Credentials (for docker-compose)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# API Settings
API_HOST=0.0.0.0
